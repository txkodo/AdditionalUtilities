{
  "enable": true,
  "type": "all",
  "childs": {
    "face": {
      "arg": {"entity": "@p"},
      "type": "move/lookentity2d"
    },
    "before": {
      "decorators": [{"type": "animation/loop","arg": {"animation": "rotate_enter"}}],
      "type": "pass"
    },
    "repeat": {
      "decorators":[
        {"type": "animation/loop","arg": {"animation": "rotate"}},
        {"type":"#decorative/damaging","arg":{"damage":"200","target":"@a[distance=..3,predicate=!kd_bt:is_sneeking]","cooldown":"10"}},
        {"type":"#decorative/damaging","arg":{"damage":"200","target":"@a[distance=..1.5]","cooldown":"10"}}
      ],
      "arg": {"offset": "^ ^ ^0.5"},
      "type": "move/untilcollide"
    },
    "after": {
      "decorators": [{"type": "animation/loop","arg": {"animation": "rotate_end"}}],
      "type": "pass"
    }
  }
}